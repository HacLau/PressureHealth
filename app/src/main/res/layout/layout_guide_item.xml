<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp">

    <ImageView
        android:id="@+id/step_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="100dp"
        android:src="@mipmap/bg_guide_step3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/step_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:lineHeight="30sp"
        android:text="@string/text_step_title_1"
        android:textColor="@color/color_blue"
        android:textFontWeight="600"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/step_image" />

    <TextView
        android:id="@+id/step_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineHeight="24sp"
        android:text="@string/text_step_content_1"
        android:textColor="@color/color_gray"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/step_title"
        app:layout_constraintStart_toStartOf="@id/step_title"
        app:layout_constraintTop_toBottomOf="@id/step_title" />


</androidx.constraintlayout.widget.ConstraintLayout>